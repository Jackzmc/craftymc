{
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "devPath": "http://localhost:8080",
    "distDir": "../dist"
  },
  "package": {
    "productName": "CraftyMc",
    "version": "0.7.2"
  },
  "tauri": {
    "allowlist": {
      // "all": true,
      "protocol": {
        "assetScope": [
          "$DOCUMENT/CraftyMc/*"
        ],
        "asset": true
      },
      "window": {
        "startDragging": true,
        "maximize": true,
        "minimize": true,
        "close": true,
        "unmaximize": true,
        "unminimize": true
      },
      "dialog": {
        "open": true,
        "save": true,
        "message": true
      }, 
      "path": {
        "all": true
      },
      "shell": {
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Entertainment",
      "copyright": "Jackz",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "me.jackz.mcmodmanager",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "../resources/*"
      ],
      "shortDescription": "Open source alternative to curseforge, supporting modrinth",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      },
    },
    "security": {
      "csp": "default-src 'self' *modrinth.com"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 960,
        "resizable": true,
        "title": "CraftyMc Mod Manager",
        "width": 1280,
        "decorations": false,
        "minHeight": 585,
        "minWidth": 1040,
        "fileDropEnabled": false
      }
    ]
  }
}
